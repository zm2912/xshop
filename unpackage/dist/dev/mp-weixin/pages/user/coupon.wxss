/* 优惠券面板 */
.coupon-content {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.coupon-content .mask-content {
  width: 100%;
  background: #f3f3f3;
  -webkit-transform: translateY(100%);
          transform: translateY(100%);
  -webkit-transition: .3s;
  transition: .3s;
}
.coupon-content.none {
  display: none;
}
.coupon-content.show .mask-content {
  -webkit-transform: translateY(0);
          transform: translateY(0);
}
/* 优惠券列表 */
